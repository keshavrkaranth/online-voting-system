<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".activities.PartyDetailsActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:id="@+id/d_partyImage"
            android:layout_gravity="center" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="- Candidate Name -"
            android:textColor="@color/white2"
            android:letterSpacing="0.06"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/productsans_regular"
            android:textSize="14sp"
            android:layout_gravity="center"
            android:textAlignment="center"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Candidate Name"
            android:id="@+id/d_partyName"
            android:textAlignment="center"
            android:textSize="24sp"
            android:textAllCaps="true"
            android:letterSpacing="0.06"
            android:textColor="@color/white"
            android:includeFontPadding="false"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="- Department -"
            android:textColor="@color/white2"
            android:letterSpacing="0.06"
            android:fontFamily="@font/productsans_regular"
            android:textSize="14sp"
            android:layout_marginTop="16dp"
            android:layout_gravity="center"
            android:textAlignment="center"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/d_partycategory"
            android:text="category"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:letterSpacing="0.06"
            android:textSize="24sp"
            android:textColor="@color/white"
            android:includeFontPadding="false"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1.5dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="30dp"
            android:background="@color/text2"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Experience"
            android:fontFamily="@font/productsans_regular"
            android:textColor="@color/white2"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            android:letterSpacing="0.08"/>
        <View
            android:layout_width="80dp"
            android:layout_height="6dp"
            android:background="@color/orange2"
            android:layout_marginStart="16dp"
            android:layout_marginTop="2dp"/>

        <TextView
            android:id="@+id/description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white2"
            android:text=""
            android:layout_margin="16dp"
            android:justificationMode="inter_word"
            tools:targetApi="o" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Vote  Here"
            android:fontFamily="@font/productsans_bold"
            android:textSize="17sp"
            android:background="@drawable/button1_ripple"
            android:id="@+id/voteButton"
            android:textColor="@color/white"
            android:letterSpacing="0.16"
            android:layout_gravity="center"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="36dp"
            android:layout_marginBottom="20dp"/>


    </LinearLayout>

</ScrollView>